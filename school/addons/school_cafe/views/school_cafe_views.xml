<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_cafe_tree" model="ir.ui.view">
        <field name="name">school.cafe.tree</field>
        <field name="model">school.cafe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_school_cafe_form" model="ir.ui.view">
        <field name="name">school.cafe.form</field>
        <field name="model">school.cafe</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="open,closed" readonly="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="launch_datetime"/> 
                            <field name="create_date"/>
                            <field name="description" widget="html"/>
                            <field name="minimum_order_amount_with_discount"/>
                        </group>
                        <group>
                            <field name="table_number"/>
                            <field name="discount_rate" widget="progressbar"/>
                            <field name="minimum_order_amount"/>
                            <field name="active" invisible="1"/>
                            <field name="launch_date"/>
                            <field name="school_school_id"/>
                            <field name="school_name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Menu Items">
                            <group>

                                <field name="create_date"/>
                                <field name="description"/>
                                <field name="minimum_order_amount_with_discount"/>
                            </group>
                        </page>
                        <page string="Orders">
                            <group>
                                <field name="launch_date"/>
                                <field name="school_school_id"/>
                                <field name="school_name"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_cafe" model="ir.actions.act_window">
        <field name="name">School Cafes</field>
        <field name="res_model">school.cafe</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_school_cafe_root" name="School Cafe">
        <menuitem id="menu_school_cafe" name="Cafes" action="action_school_cafe"/>
    </menuitem>
</odoo>