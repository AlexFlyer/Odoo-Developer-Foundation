<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_school_list" model="ir.ui.view">
        <field name="name">school.school.list</field>
        <field name="model">school.school</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_form" model="ir.ui.view">
        <field name="name">school.school.form</field>
        <field name="model">school.school</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="school_cafeteria_ids"/>
                        <field name="school_cafe_ids">
                            <tree>
                                <field name="name"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_school_search" model="ir.ui.view">
        <field name="name">school.school.search</field>
        <field name="model">school.school</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_school" model="ir.actions.act_window">
        <field name="name">Schools</field>
        <field name="res_model">school.school</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_school" name="Schools" action="action_school" sequence="10"/>
</odoo>