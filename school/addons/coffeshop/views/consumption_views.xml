<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_consumption_tree" model="ir.ui.view">
        <field name="name">coffeshop.consumption.tree</field>
        <field name="model">coffeshop.consumption</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_id"/>
                <field name="coffeshop_id"/>
                <field name="meal_id"/>
                <field name="consumption_date"/>
            </tree>
        </field>
    </record>
    <record id="view_consumption_form" model="ir.ui.view">
        <field name="name">coffeshop.consumption.form</field>
        <field name="model">coffeshop.consumption</field>
        <field name="arch" type="xml">
            <form string="Consumption">
                <header>
                    <button name="action_create_sale_order" type="object" string="Create Sale"
                        invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object" string="Cancel"
                        invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,delivered"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="state != 'draft'"/>
                        <field name="student_id" readonly="state != 'draft'"/>
                        <field name="coffeshop_id" readonly="state != 'draft'"/>
                        <field name="meal_id" readonly="state != 'draft'"/>
                        <field name="consumption_date" readonly="state != 'draft'"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- search view for consumption -->
    <record id="view_consumption_search" model="ir.ui.view">
        <field name="name">coffeshop.consumption.search</field>
        <field name="model">coffeshop.consumption</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="student_id"/>
                <field name="coffeshop_id"/>
                <field name="meal_id"/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="delivered" string="Delivered" domain="[('state','=','delivered')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state','=','cancelled')]"/>
                <group expand="0" string="Group by State">
                    <filter string="State" name="state" context="{'group_by':'state'}"/>
                    <filter string="Student" name="student_id" context="{'group_by':'student_id'}"/>
                    <filter string="Coffeshop" name="coffeshop_id" context="{'group_by':'coffeshop_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- action for consumption -->
    <record id="action_consumption" model="ir.actions.act_window">
        <field name="name">Consumptions</field>
        <field name="res_model">coffeshop.consumption</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_consumption_search"/>
        <field name="context">{'default_state': 'draft'}</field>
    </record>   
</odoo>
