<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="action_report_student" model="ir.actions.report">
    <field name="name">Student Data</field>
    <field name="model">student</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">coffee_shop.template_student</field>
    <field name="binding_model_id" ref="coffee_shop.model_student"/>
    <field name="multi" eval="True"/>
  </record>

  <template id="template_student">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
              <div>
                <h2>Informaci√≥n del Estudiante</h2>
                <p><strong>Nombre:</strong> <span t-field="o.name"/></p>
                <p><strong>Carrera:</strong> <span t-field="o.carrer_id"/></p>
              </div>
            </t>
        </t>
    </t>
  </template>
</odoo>
