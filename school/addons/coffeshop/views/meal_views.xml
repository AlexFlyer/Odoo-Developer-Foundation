<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_meal_tree" model="ir.ui.view">
        <field name="name">coffeshop.meal.tree</field>
        <field name="model">coffeshop.meal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
            </tree>
        </field>
    </record>
    <record id="view_meal_form" model="ir.ui.view">
        <field name="name">coffeshop.meal.form</field>
        <field name="model">coffeshop.meal</field>
        <field name="arch" type="xml">
            <form string="Meal">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="coffeshop_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- action for meal -->
    <record id="action_meal" model="ir.actions.act_window">
        <field name="name">Meals</field>
        <field name="res_model">coffeshop.meal</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
