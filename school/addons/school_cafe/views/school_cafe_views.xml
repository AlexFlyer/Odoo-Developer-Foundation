<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_school_cafe_tree" model="ir.ui.view">
        <field name="name">school.cafe.tree</field>
        <field name="model">school.cafe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_school_cafe_form" model="ir.ui.view">
        <field name="name">school.cafe.form</field>
        <field name="model">school.cafe</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_cafe" model="ir.actions.act_window">
        <field name="name">School Cafes</field>
        <field name="res_model">school.cafe</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_school_cafe_root" name="School Cafe">
        <menuitem id="menu_school_cafe" name="Cafes" action="action_school_cafe"/>
    </menuitem>
</odoo>