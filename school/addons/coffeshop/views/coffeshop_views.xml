<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coffeshop_tree" model="ir.ui.view">
        <field name="name">coffeshop.coffeshop.tree</field>
        <field name="model">coffeshop.coffeshop</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <record id="view_coffeshop_form" model="ir.ui.view">
        <field name="name">coffeshop.coffeshop.form</field>
        <field name="model">coffeshop.coffeshop</field>
        <field name="arch" type="xml">
            <form string="Coffeshop">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location"/>
                        <field name="meal_ids" widget="many2many_tags"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- action for coffeshop -->
    <record id="action_coffeshop" model="ir.actions.act_window">
        <field name="name">Coffeshops</field>
        <field name="res_model">coffeshop.coffeshop</field>
        <field name="view_mode">tree,form</field>
    </record>   
</odoo>
