<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">coffeshop.student.tree</field>
        <field name="model">coffeshop.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="middle_name"/>
                <field name="last_name"/>
                <field name="code"/>
                <field name="carrer_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">coffeshop.student.form</field>
        <field name="model">coffeshop.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_consumptions" type="object" icon="fa-file-text-o">
                            <field string="Consumptions" name="consumption_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="middle_name"/>
                        <field name="last_name"/>
                        <field name="birth_date"/>
                        <field name="age"/>
                        <field name="code"/>
                        <field name="carrer_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    # action for student
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">coffeshop.student</field>
        <field name="view_mode">tree,form</field>
    </record>  
</odoo>
