<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_consumption_excel_form" model="ir.ui.view">
        <field name="name">wizard.consumption.excel.form</field>
        <field name="model">wizard.consumption.excel</field>
        <field name="arch" type="xml">
            <form string="Consumption Excel Wizard">
                <group>
                    <field name="carrer_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_generate_excel" type="object" string="Export to Excel" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_wizard_consumption_excel" model="ir.actions.act_window">
        <field name="name">Consumption Excel Wizard</field>
        <field name="res_model">wizard.consumption.excel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_wizard_consumption_excel_form"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_wizard_consumption_excel_root"
              name="Consumption Excels"
              parent="menu_wizard_consumption_report_root"
              action="action_wizard_consumption_excel"
              sequence="60"/>
</odoo>
